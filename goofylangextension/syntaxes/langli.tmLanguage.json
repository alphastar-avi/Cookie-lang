{
  "scopeName": "source.langli",
  "fileTypes": ["li"],
  "patterns": [
    {
      "name": "keyword.control.langli",
      "match": "\\b(if|else|while|until|loop|switch|case:|default|break|return|fun)\\b"
    },
    {
      "name": "storage.type.langli",
      "match": "\\b(int|float|bool|char|str|var|type|inline)\\b"
    },
    {
      "name": "support.function.builtin.langli",
      "match": "\\b(print|input)\\b"
    },
    {
      "name": "keyword.operator.comparison.langli",
      "match": "(<=|>=|<|>|==|!=)|\\b(lesser\\s+than(\\s+equals)?|greater\\s+than(\\s+equals)?)\\b"
    },
    {
      "name": "keyword.operator.logical.langli",
      "match": "\\b(and|or)\\b|(&&|\\|\\|)"
    },
    {
      "name": "keyword.operator.arithmetic.langli",
      "match": "[+\\-*/=]"
    },
    {
      "name": "constant.numeric.langli",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    {
      "name": "string.quoted.double.langli",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.langli",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "string.quoted.single.langli",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.langli",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "comment.line.langli",
      "begin": "^\\s*(?://|comment:)",
      "end": "$"
    }
  ]
}
